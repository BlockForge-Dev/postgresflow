# Runtime DB (docker compose uses this)
# DATABASE_URL=postgres://postgres:postgres@db:5432/postgresflow_dev

# Integration tests DB
# TEST_DATABASE_URL=postgres://postgres:postgres@db:5432/postgresflow_test

# Worker config
# PGFLOW_WORKER_ID=worker-1
# (leave empty to use container hostname)
# PGFLOW_QUEUE=default
# PGFLOW_LEASE_SECONDS=10

# Admin API (set to "off" to disable)
# PGFLOW_ADMIN_ADDR=0.0.0.0:3003

# Enqueue guardrails
# PGFLOW_MAX_PAYLOAD_BYTES=262144
# PGFLOW_MAX_ENQUEUE_PER_MINUTE=10000

# Optional: run migrations on startup
# PGFLOW_MIGRATE_ON_STARTUP=1
